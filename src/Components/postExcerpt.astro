---
import { CollectionEntry } from "astro:content";
import slugify from "../lib/createSlug.js";

export interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<article class="px-2">
  <a
    href={`/posts/${slugify(post?.data?.title)}`}
    class="space-y-2 no-underline text-white"
  >
    <h3
      class="text-xl font-bold text-teal-200 hover:underline underline-offset-8 decoration-dashed decoration-teal-200 max-w-fit"
      transition:name="heading"
    >
      {post?.data?.title}
    </h3>
    <div class="text-sm space-x-2 italic">
      <span transition:name="date">{post?.data?.publishDate}</span>
      <span transition:name="author">{post?.data?.author}</span>
    </div>
    <div class="space-x-2 text-teal-200" transition:name="tags">
      {post?.data?.tags.map((tag: string) => <span>#{tag}</span>)}
    </div>
    <p class="sm:text-lg" transition:name="description">
      {post?.data?.description}
    </p>
  </a>
</article>
